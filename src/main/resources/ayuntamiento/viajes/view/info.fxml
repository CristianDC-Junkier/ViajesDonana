<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="350.0" stylesheets="@../styles/global.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ayuntamiento.viajes.controller.InfoController">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
        <Label fx:id="infoMessageLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" prefWidth="330.0" text="Info" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin></Label>
      <StackPane prefHeight="50.0">
         <children>
            <HBox alignment="CENTER" spacing="25.0">
               <children>
                    <Button fx:id="infoAcceptButton" onAction="#acceptInfoDialog" styleClass="error-button" text="Aceptar" textFill="WHITE">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="Trebuchet MS Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Region prefWidth="100.0" />
                  <Button fx:id="infoRejectButton" onAction="#rejectInfoDialog" styleClass="error-button" text="Rechazar" textFill="WHITE">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="Trebuchet MS Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <stylesheets>
                        <URL value="@../styles/error.css" />
                        <URL value="@../styles/global.css" />
                     </stylesheets>
                  </Button>
               </children>
            </HBox>
            <Button fx:id="infoExitButton" onAction="#exitInfoDialog" styleClass="error-button" text="Cerrar" textFill="WHITE">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <font>
                  <Font name="Trebuchet MS Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="15.0" top="15.0" />
         </VBox.margin>
      </StackPane>
    </VBox>
</AnchorPane>
