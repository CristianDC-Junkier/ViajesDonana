<BorderPane fx:id="father" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ayuntamiento.viajes.controller.TravellerController">
   <top>
      <HBox>
         <children>
            <ImageView fitHeight="100.0" fitWidth="178.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/global_logo-ayunt.png" />
               </image>
            </ImageView>
            <Pane prefWidth="732.0" HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="30.0" fitWidth="160.0" onMouseClicked="#backpanel" pickOnBounds="true" preserveRatio="true" styleClass="glow">
               <image>
                  <Image url="@../icons/global_return.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets right="30.0" top="30.0" />
               </HBox.margin>
            </ImageView>
         </children>
         <padding>
            <Insets left="50.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="BOTTOM_CENTER" spacing="10.0">
         <children>
            <Label text="© 2025 Ayuntamiento de Almonte" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Trebuchet MS Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="3.0" />
               </HBox.margin>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="users" layoutX="772.0" layoutY="22.0" onMouseClicked="#userspanel" style="-fx-cursor: hand;" styleClass="privacity" stylesheets="@../styles/global.css">
               <font>
                  <Font name="Trebuchet MS Bold" size="12.0" />
               </font>
               <padding>
                  <Insets right="20.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="3.0" />
               </HBox.margin>
            </Label>
            <Label onMouseClicked="#serviceterms" style="-fx-cursor: hand;" styleClass="privacity" stylesheets="@../styles/global.css" text="Términos de Servicio">
               <font>
                  <Font name="Trebuchet MS Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="3.0" right="25.0" />
               </HBox.margin>
            </Label>
            <ImageView fitHeight="20.0" fitWidth="200.0" onMousePressed="#exit" pickOnBounds="true" preserveRatio="true" styleClass="glow">
               <image>
                  <Image url="@../icons/global_unlog.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="searcher" minHeight="-Infinity" prefHeight="100.0" styleClass="searcher">
               <children>
                  <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="50.0" spacing="20.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                     <children>
                        <Label fx:id="amount" contentDisplay="CENTER" minWidth="-Infinity" prefHeight="20.0" prefWidth="304.0" text="Total de Inscripciones" textFill="WHITE">
                           <font>
                              <Font name="Trebuchet MS Bold" size="16.0" />
                           </font>
                        </Label>
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="dniTF" minWidth="-Infinity" onKeyTyped="#applyAllFilters" prefWidth="100.0" promptText="DNI" styleClass="field">
                           <font>
                              <Font name="Trebuchet MS Bold" size="14.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="nameTF" minWidth="-Infinity" onKeyTyped="#applyAllFilters" prefHeight="26.0" prefWidth="150.0" promptText="Nombre" styleClass="field">
                           <font>
                              <Font name="Trebuchet MS Bold" size="14.0" />
                           </font>
                        </TextField>
                        <ChoiceBox fx:id="officeCB" minWidth="-Infinity" prefWidth="100.0" />
                        <ChoiceBox fx:id="tripCB" minWidth="-Infinity" prefHeight="26.0" prefWidth="140.0" />
                        <ImageView fitHeight="24.0" fitWidth="24.0" nodeOrientation="INHERIT" onMouseClicked="#resetAllFilters" pickOnBounds="true" preserveRatio="true" scaleX="1.5" scaleY="1.5" styleClass="glow">
                           <image>
                              <Image url="@../icons/car_clean-filters.png" />
                           </image>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="50.0">
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                     <children>
                        <Region minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label contentDisplay="CENTER" minWidth="-Infinity" prefHeight="20.0" prefWidth="166.0" text="Fecha anterior a" textFill="WHITE">
                                 <font>
                                    <Font name="Trebuchet MS Bold" size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </Label>
                              <DatePicker fx:id="sign_upDP" minWidth="-Infinity" onAction="#applyAllFilters" prefHeight="26.0" prefWidth="140.0" promptText="Inscripción">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </DatePicker>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <TableView fx:id="travellerTable" prefHeight="482.0" prefWidth="979.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="dniColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="179.0" text="DNI" />
                  <TableColumn fx:id="nameColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="321.0" text="Nombre" />
                  <TableColumn fx:id="officeColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="179.0" text="Lugar de Inscripción" />
                  <TableColumn fx:id="tripColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="193.0" text="Viaje" />
                  <TableColumn fx:id="signupColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="172.0" text="Fecha de Inscripción" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" maxHeight="75.0" prefHeight="60.0" spacing="20.0">
               <children>
                  <Button ellipsisString="+" mnemonicParsing="false" onAction="#add" prefHeight="30.0" prefWidth="100.0" text="Añadir" textFill="WHITE">
                     <font>
                        <Font name="Trebuchet MS Bold" size="16.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding></Button>
                  <Button ellipsisString="x" mnemonicParsing="false" onAction="#modify" prefHeight="30.0" prefWidth="100.0" text="Modificar" textFill="WHITE">
                     <font>
                        <Font name="Trebuchet MS Bold" size="16.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding></Button>
                  <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS" />
                  <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS" />
                  <Button ellipsisString="-" mnemonicParsing="false" onAction="#delete" prefHeight="30.0" prefWidth="100.0" text="Eliminar" textFill="WHITE">
                     <font>
                        <Font name="Trebuchet MS Bold" size="16.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding></Button>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
   <stylesheets>
      <URL value="@../styles/vehicle.css" />
      <URL value="@../styles/global.css" />
   </stylesheets>
</BorderPane>
