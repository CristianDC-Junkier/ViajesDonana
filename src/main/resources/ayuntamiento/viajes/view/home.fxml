                        </StackPane>
                        <Label alignment="CENTER" prefWidth="200.0" text="Panel de estadísticas" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font name="Trebuchet MS" size="14.0" />
                           </font>
                        </Label>
                            </children>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                        </VBox>
                    </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
                </HBox>
            <Button mnemonicParsing="false" onAction="#pdfspanel" styleClass="home-button" stylesheets="@../styles/home.css" text="Generación de PDFs" textAlignment="CENTER" textFill="WHITE">
               <graphic>
                  <Label>
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="60.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/home_pdf-file.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets right="15.0" />
                     </padding>
                  </Label>
               </graphic>
               <padding>
                  <Insets bottom="12.0" left="30.0" right="30.0" top="12.0" />
               </padding>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Trebuchet MS Bold" size="14.0" />
               </font>
            </Button>
            </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="75.0" />
         </padding>
