               <HBox.margin>
                  <Insets bottom="3.0" />
               </HBox.margin>
            </Label>
            <Label onMouseClicked="#serviceterms" style="-fx-cursor: hand;" styleClass="privacity" stylesheets="@../styles/global.css" text="Términos de Servicio">
