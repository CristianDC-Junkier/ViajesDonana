                        <Label alignment="CENTER" prefWidth="200.0" text="Panel de viajeros" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font name="Trebuchet MS" size="14.0" />
                           </font>
                        </Label>
                            </children>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                        </VBox>
                        <VBox alignment="CENTER" onMouseClicked="#stadisticspanel" onMouseEntered="#stadisticsgif" onMouseExited="#stadisticspng" spacing="10.0" styleClass="glow" stylesheets="@../styles/global.css">
